<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">Brunch Event Details:</h5>
          <hr>

              <p><strong>Restaurant/Venue: </strong>{{Event.venue}}</p>
              <p><strong>Theme: </strong>{{Event.theme}}</p>
              <p><strong>Date & Time: </strong>{{Event.date_time}}</p>
              <p><strong>Specials: </strong>{{Event.specials}}</p>
              <p><strong>Address: </strong>{{Event.address}}</p>
              <p><strong>Neighborhood: </strong>{{Event.neighborhood}}</p>
              <p><strong>Food Type: </strong>{{Event.food_type}}
              
              <br>
              <br>

          <div class="row">
            <button type="button" class="btn btn-success d-flex justify-content-center" data-toggle="modal" data-target="#exampleModal"> RSVP </button>

            <button class="btn btn-danger float-right delete" data-id={{Event.id}}> ｘ </button></p>

            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">

            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">RSVP for {{Event.theme}} at {{Event.venue}}</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                  </button>
                </div>
            <div class="modal-body">
              <form class="needs-validation"></form>
                <div class="form-group">
                <label for="validationRegister-name">Enter Name </label>
                <input type="text" id="validationRegister-name" class="form-control" aria-describedby="register-name" placeholder="Enter Name">
              <div class="invalid-feedback">Please choose a username.
              </div>
              </div>
          <div class="form-group">
            <label for="validationRegister-email">Enter Email </label>
            <input type="text" id="validationRegister-email" class="form-control" aria-describedby="register-email" placeholder="Enter Email">
            <div class="invalid-feedback">Please choose a username.
            </div>
          </div>
            </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary register-user" data-id={{Event.id}}>Register for Event</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>

  <br>
  <hr>
  <br>
    {{!-- <a href="/events">← Back To Events Page</a> --}}
    <h5>Attending</h5>
      {{#each Register}}
        <ul>
          <li>{{name}}</li>
        </ul>
      {{/each}}

      <a href="/events">← Back To Events Page</a>
      {{!-- <a href="/newevent" class="add-link"> Add Event </a> --}}

        </div>
      </div>
    </div>
  </div>
</div>

